<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#2D2A7C"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

<ImageView
android:id="@+id/imgCharacter"
android:layout_width="250dp"
android:layout_height="250dp"
android:src="@drawable/ic_onboarding_illustration"
android:contentDescription="Onboarding Illustration"
android:layout_marginTop="64dp"/>

<TextView
android:id="@+id/tvDescription"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Jot Down anything you want to achieve, today or in the future"
android:textColor="@android:color/white"
android:textSize="22sp"
android:textAlignment="center"
android:fontFamily="sans-serif-medium"
android:layout_marginTop="48dp"/>

<Button
android:id="@+id/btnGetStarted"
android:layout_width="match_parent"
android:layout_height="60dp"
android:text="Let's Get Started"
android:textColor="@color/purple_700"
android:background="@drawable/rounded_button_white"
android:layout_marginTop="64dp"
android:drawableEnd="@drawable/ic_arrow_right_purple"
android:drawablePadding="12dp"
android:textAllCaps="false"
android:fontFamily="sans-serif-medium"
android:elevation="4dp"/>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
<solid android:color="@android:color/white" />
<corners android:radius="32dp" />
<padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
</shape>

        </LinearLayout>